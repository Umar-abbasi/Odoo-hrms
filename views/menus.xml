<odoo>
    <record id="action_employee_dashboard" model="ir.actions.act_window">
        <field name="name">Employee Dashboard</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,list,form</field> 
        <field name="context">{'group_by': 'state'}</field>
    </record>

    <record id="action_emp_all" model="ir.actions.act_window">
        <field name="name">All Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_emp_active" model="ir.actions.act_window">
        <field name="name">Active Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'active')]</field>
    </record>
    <record id="action_emp_terminated" model="ir.actions.act_window">
        <field name="name">Terminated Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'terminated')]</field>
    </record>
