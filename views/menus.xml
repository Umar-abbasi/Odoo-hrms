        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'dismissed')]</field>
    </record>
    <record id="action_emp_archived" model="ir.actions.act_window">
        <field name="name">Archived Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'archived')]</field>
    </record>
    <record id="action_emp_deceased" model="ir.actions.act_window">
        <field name="name">Deceased Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'deceased')]</field>
    </record>
    <record id="action_report_disabled" model="ir.actions.act_window">
        <field name="name">Report: Disabled Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('disability', '=', True)]</field>
    </record>

    <menuitem id="menu_university_root" name="University HR Linked" web_icon="hr,static/description/icon.png"/>

    <menuitem id="menu_uni_dashboard" name="Dashboard" parent="menu_university_root" action="action_employee_dashboard" sequence="1"/>

