    </record>
    <record id="action_emp_retired" model="ir.actions.act_window">
        <field name="name">Retired Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'retired')]</field>
    </record>
    <record id="action_emp_compulsory_retired" model="ir.actions.act_window">
        <field name="name">Compulsory Retired</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'compulsory_retired')]</field>
    </record>
    <record id="action_emp_removed" model="ir.actions.act_window">
        <field name="name">Removed From Service</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'removed')]</field>
    </record>
    <record id="action_emp_dismissed" model="ir.actions.act_window">
