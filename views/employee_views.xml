<odoo>
    <record id="view_employee_form_university" model="ir.ui.view">
        <field name="name">hr.employee.form.university</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">

            <xpath expr="//h5[.//field[@name='work_email']]" position="attributes"><attribute name="invisible">1</attribute></xpath>
            <xpath expr="//h5[.//field[@name='work_phone']]" position="attributes"><attribute name="invisible">1</attribute></xpath>
            <xpath expr="//h5[.//field[@name='mobile_phone']]" position="attributes"><attribute name="invisible">1</attribute></xpath>
            <xpath expr="//h5[.//field[@name='category_ids']]" position="attributes"><attribute name="invisible">1</attribute></xpath>
            <xpath expr="//button[@name='action_create_user']" position="attributes"><attribute name="invisible">1</attribute></xpath>
            <xpath expr="//button[@invisible='not active or not id']" position="attributes"><attribute name="invisible">1</attribute></xpath>
            <xpath expr="//field[@name='version_id']" position="attributes"><attribute name="invisible">1</attribute></xpath>

            <xpath expr="//header" position="inside">
                <button name="action_generate_code" string="Generate Code" type="object" class="btn-primary" invisible="state != 'draft' or emp_code"/>
                <button name="action_lock_profile" string="Lock Profile" type="object" class="btn-primary" invisible="state != 'draft' or not emp_code"/>
                <button name="action_activate_employee" string="Activate" type="object" class="btn-success" invisible="state != 'profile_locked'"/>
                
                <button name="action_unlock_profile" string="Unlock Profile" type="object" class="btn-warning" groups="hr.group_hr_manager" invisible="state == 'draft'"/>
                <button name="%(action_employee_status_wizard)d" string="Change Status" type="action" class="btn-primary" invisible="state not in ['active', 'resigned', 'retired']"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,profile_locked,active" invisible="state not in ['draft', 'profile_locked']"/>
                <field name="state" widget="statusbar" statusbar_visible="active,resigned,retired,terminated,compulsory_retired,removed,dismissed,archived,deceased" invisible="state in ['draft', 'profile_locked']"/>
            </xpath>

            <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                <div class="d-flex mt-2 mb-2">
                    <field name="university_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Tags" nolabel="1" readonly="state != 'draft'"/>
                </div>
                <div class="d-flex align-items-center mb-1">
                    <span class="fw-bold me-2" style="min-width: 120px;">Code:</span>
                    <field name="emp_code" placeholder="Click 'Generate Code'" nolabel="1" readonly="1" force_save="1"/>
                </div>
                <div class="d-flex align-items-center mb-1">
                    <span class="fw-bold me-2" style="min-width: 120px;">Biometric Code:</span>
                    <field name="biometric_code" placeholder="Click 'Generate Code'" nolabel="1" readonly="1" force_save="1"/>
                </div>
                <div class="d-flex align-items-center mb-1">
                    <span class="fw-bold me-2" style="min-width: 120px;">CNIC:</span>
                    <field name="cnic" placeholder="00000-0000000-0" nolabel="1" readonly="state != 'draft'"/>
                </div>
            </xpath>

            <xpath expr="//notebook" position="inside">
                
                <page string="Family" sequence="4">
                    <group>
                        <group string="Personal Details">
                            <field name="father_name" readonly="state != 'draft'"/>
                            <field name="religion_id" readonly="state != 'draft'"/>
                            <field name="domicile" readonly="state != 'draft'"/>
                            <field name="dual_nationality" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <separator string="Family Members"/>
                    <field name="family_member_ids" readonly="state != 'draft'">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="relation"/>
                            <field name="dob"/>
                            <field name="phone"/>
                        </list>
                    </field>
                </page>

                <page string="Education" sequence="5">
                    <field name="education_ids" readonly="state != 'draft'">
                        <list editable="bottom">
                            <field name="institute_id"/>
                            <field name="degree_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="score"/>
                        </list>
                    </field>
                </page>

                <page string="Publications" sequence="6">
                    <field name="publication_ids" readonly="state != 'draft'">
                        <list editable="bottom">
                            <field name="title"/>
                            <field name="journal"/>
                            <field name="date_published"/>
                        </list>
                    </field>
                </page>

                <page string="Medical" sequence="7">
                    <group>
                        <group string="Disability Info">
                            <field name="disability" readonly="state != 'draft'"/>
                            <field name="disability_nature_id" invisible="not disability" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <separator string="Medical History"/>
                    <field name="medical_history_ids" readonly="state != 'draft'">
                        <list editable="bottom">
                            <field name="disease_name"/>
                            <field name="is_surgery"/>
                            <field name="hospital_name"/>
                            <field name="severity"/>
                        </list>
                    </field>
                </page>

                <page string="Pay Scale &amp; HR Settings" sequence="9">
                    <group>
                        <group string="Dates">
                            <field name="first_contract_date" readonly="state != 'draft'"/>
                            <field name="regularization_date" readonly="state != 'draft'"/>
                            <field name="date_of_leaving" readonly="state != 'draft'"/>
                        </group>
                        <group string="Financials">
                            <field name="scale_id" readonly="state != 'draft'"/>
                            <field name="basic_pay_type" readonly="state != 'draft'"/>
                            <field name="manual_gross" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </page>

                <page string="Status History" sequence="10">
                    <field name="status_history_ids" readonly="1">
                        <list decoration-danger="new_state in ['terminated', 'dismissed']" decoration-muted="new_state in ['retired', 'resigned']">
                            <field name="date"/>
                            <field name="old_state"/>
                            <field name="new_state" widget="badge"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="office_order" widget="binary" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                        </list>
                    </field>
                </page>

            </xpath>

            <xpath expr="//page[@name='work_information']" position="attributes">
                <attribute name="sequence">3</attribute>
            </xpath>
            <xpath expr="//page[@name='work_information']//field" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>

            <xpath expr="//page[@name='personal_information']" position="attributes">
                <attribute name="string">Personal</attribute>
                <attribute name="sequence">1</attribute>
            </xpath>
            <xpath expr="//page[@name='personal_information']//field" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>
            
            <xpath expr="//page[@name='hr_settings']" position="attributes">
                <attribute name="sequence">11</attribute>
            </xpath>
            <xpath expr="//page[@name='hr_settings']//field" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>
            
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>

            </field>
    </record>
</odoo>